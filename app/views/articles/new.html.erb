<h1>新しく投稿する</h1>

<%= form_with scope: :article, url: articles_path, local: true do |form| %>
    <p>
      <%= form.label :タイトル %><br>
      <%= form.text_field :title %>
    </p>

    <p>
      <%= form.label :本文 %><br>
      <%= form.text_area :text %>
    </p>

    <p>
      <%= form.submit "投稿" %>
    </p>
<% end %>

<%= link_to '戻る', articles_path %>
